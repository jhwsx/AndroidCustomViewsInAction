<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <com.example.chapter07.part3_maskfilter.C_BitmapShadowView
        android:id="@+id/bsv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:bsv_shadowColor="@android:color/holo_orange_dark"
        app:bsv_shadowDx="-10"
        app:bsv_shadowDy="-10"
        app:bsv_shadowRadius="30"
        app:bsv_src="@drawable/dog2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hc"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <com.example.chapter07.part3_maskfilter.C_BitmapShadowView
        android:id="@+id/bsv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:bsv_shadowColor="@android:color/holo_blue_bright"
        app:bsv_shadowDx="10"
        app:bsv_shadowDy="-10"
        app:bsv_shadowRadius="10"
        app:bsv_src="@drawable/dog2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_vc"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.chapter07.part3_maskfilter.C_BitmapShadowView
        android:id="@+id/bsv3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:bsv_shadowColor="@android:color/holo_purple"
        app:bsv_shadowDx="-10"
        app:bsv_shadowDy="10"
        app:bsv_shadowRadius="10"
        app:bsv_src="@drawable/dog2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline_vc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_hc"
        app:layout_constraintWidth_percent="0.4" />

    <com.example.chapter07.part3_maskfilter.C_BitmapShadowView
        android:id="@+id/bsv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:bsv_shadowColor="@android:color/holo_red_dark"
        app:bsv_shadowDx="10"
        app:bsv_shadowDy="10"
        app:bsv_shadowRadius="20"
        app:bsv_src="@drawable/dog2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_vc"
        app:layout_constraintTop_toTopOf="@id/guideline_hc" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>