<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb_multi_color"
        android:text="MultiColor"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <CheckBox
            android:id="@+id/cb_draw_rect"
            android:text="DrawRect"
            android:textSize="16sp"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:visibility="invisible"
            android:checked="false"
            android:id="@+id/cb_small_rect"
            android:text="smallRect"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.example.chapter07.part6.PaintSetshaderRadialGradientView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>