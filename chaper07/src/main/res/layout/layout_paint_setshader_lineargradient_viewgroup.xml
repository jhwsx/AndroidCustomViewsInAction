<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb"
            android:checked="false"
            android:text="smallRect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.chaper07.part5.PaintSetshaderLinearGradientView
            android:id="@+id/pslv1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:pslv_type="double_color"
            app:pslv_x0="zero"
            app:pslv_x1="width"
            app:pslv_y0="half_height"
            app:pslv_y1="half_height" />

        <com.example.chaper07.part5.PaintSetshaderLinearGradientView
            android:id="@+id/pslv2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:pslv_type="multi_color"
            app:pslv_x0="zero"
            app:pslv_x1="width"
            app:pslv_y0="half_height"
            app:pslv_y1="half_height" />

        <com.example.chaper07.part5.PaintSetshaderLinearGradientView
            android:id="@+id/pslv3"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:pslv_type="multi_color"
            app:pslv_x0="zero"
            app:pslv_x1="half_width"
            app:pslv_y0="zero"
            app:pslv_y1="half_height" />

        <com.example.chaper07.part5.PaintSetshaderLinearGradientView
            android:id="@+id/pslv4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:pslv_type="multi_color"
            app:pslv_x0="zero"
            app:pslv_x1="half_width"
            app:pslv_y0="zero"
            app:pslv_y1="half_height" />
    </LinearLayout>
</ScrollView>
